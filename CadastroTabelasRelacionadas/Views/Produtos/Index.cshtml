@model IEnumerable<CadastroTabelasRelacionadas.Models.ProdutoModel>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">Pesquisar Produtos</div>
    <div class="card-body">
        <form action="/ProdutosCOntroller/Index" method="get">
            <div class="row">
                <div class="col-2">
                    <a href="/ProdutoController/Create" class="btn btn-success">
                        Novo Produto
                    </a>
                </div>
                <div class="col-2">
                    <select name="tipoPesquisa" class="form-control">
                        <option value="Todos">Todos</option>                        
                    </select>
                </div>
                <div class="col-4">
                    <input type="text" name="query" , class="form-control" placeholder="Digite sua busca" />
                </div>
                <div class="col-4">
                    <button class="btn btn-primary" type="submit">Pesquisar</button>
                </div>
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>            
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
